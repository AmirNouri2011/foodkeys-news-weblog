# =============================================================================
# PRODUCTION ENVIRONMENT TEMPLATE
# Copy this file to .env.production and fill in your production values
# NEVER commit this file with real credentials!
# =============================================================================

# Database - PostgreSQL
# Use a strong password and consider using connection pooling in production
DATABASE_URL="postgresql://foodkeys:CHANGE_THIS_STRONG_PASSWORD@postgres:5432/foodkeys_db?schema=public"
POSTGRES_USER="foodkeys"
POSTGRES_PASSWORD="CHANGE_THIS_STRONG_PASSWORD"
POSTGRES_DB="foodkeys_db"

# Authentication
# Generate a secure 32+ character random string
API_KEY="CHANGE_THIS_TO_SECURE_RANDOM_STRING_32_CHARS_MIN"

# Generate TOTP secret using: npx tsx -e "import { generateTOTPSecret } from './src/lib/auth'; console.log(generateTOTPSecret())"
TOTP_SECRET="CHANGE_THIS_GENERATE_NEW_SECRET"

# Site Configuration
NEXT_PUBLIC_SITE_URL="https://yourdomain.com"
NEXT_PUBLIC_SITE_NAME="FoodKeys Weblog"
NEXT_PUBLIC_SITE_DESCRIPTION="A modern news and articles platform"

# Environment
NODE_ENV="production"

# Application Port (typically 3000, behind reverse proxy)
APP_PORT="3000"

