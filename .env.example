# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://foodkeys:foodkeys_password@localhost:5432/foodkeys_db?schema=public"

# Individual database settings (used by docker-compose)
POSTGRES_USER="foodkeys"
POSTGRES_PASSWORD="foodkeys_password"
POSTGRES_DB="foodkeys_db"
POSTGRES_HOST="postgres"
POSTGRES_PORT="5432"

# =============================================================================
# AUTHENTICATION
# =============================================================================
# API Key for authenticating API requests
# In production, generate a secure random string (min 32 characters)
API_KEY="your-secure-api-key-here"

# TOTP Secret for two-factor authentication
# Generate using: npx tsx -e "import { generateTOTPSecret } from './src/lib/auth'; console.log(generateTOTPSecret())"
TOTP_SECRET="JBSWY3DPEHPK3PXPJBSWY3DPEHPK3PXP"

# =============================================================================
# SITE CONFIGURATION
# =============================================================================
# Public site URL (used for SEO, canonical URLs, etc.)
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Site branding
NEXT_PUBLIC_SITE_NAME="FoodKeys Weblog"
NEXT_PUBLIC_SITE_DESCRIPTION="A modern news and articles platform"

# =============================================================================
# ENVIRONMENT
# =============================================================================
NODE_ENV="development"

# =============================================================================
# OPTIONAL: ANALYTICS & THIRD-PARTY INTEGRATIONS
# =============================================================================
# Google Analytics Measurement ID
# NEXT_PUBLIC_GA_MEASUREMENT_ID=""

# Google Search Console verification
# NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=""

# =============================================================================
# OPTIONAL: IMAGE/MEDIA STORAGE
# =============================================================================
# Upload directory (relative to project root)
UPLOAD_DIR="public/uploads"

# Maximum upload size in bytes (default: 10MB)
MAX_UPLOAD_SIZE="10485760"
